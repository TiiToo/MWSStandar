{
    "name": "TiiToo/MwsStandar",
    "description": "Creates ctags for composer projects",
    "license": "MIT",
    "authors": [
        {
            "name": "Osvaldo Canteros",
            "homepage": "",
            "role": "Developer"
        }
    ],
    "keywords": ["ctags", "exuberant ctags", "vim", "composer", "php"],
    "require": {
        "php": ">=5.3.10"
    },
    "require-dev": {
        "composer/composer": "1.0.x-dev",
    },
    "autoload": {
        "psr-0": 
        {
            "MwsStandar\\": "library/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "MwsStandar\\Composer\\Script\\Hooks::checkHooks"
        ],
        "post-update-cmd": [
            "MwsStandar\\Composer\\Script\\Hooks::checkHooks"
        ]
    }
}
